; more chunky
[HKEY_CURRENT_USER\Control Panel\Desktop\WindowMetrics]
; default -262
"ScrollHeight"="-300"
"ScrollWidth"="-300"
; default -15
"BorderWidth"="-30"
"PaddedBorderWidth"="-30"
